<div class="col-md-5">
  <%= simple_form_for @entry, html: {name:"myForm"} do |f| %>
    <%= f.input :title, input_html: {  id:"myTitle" } %>
      <%= f.input :body, as: :hidden, input_html: { id:"myTextArea" } %>
      <div id="wysiwyg" style="padding:8px; width:100%;">
        <ul id="toolbar" role="menu">
          <li><%= link_to " ", '#', class:"btn btn-default",  type: "button", id: "undo" %></li>
          <li><%= link_to " ", '#', class:"btn btn-default", type: "button", id: "redo" %></li>
          <li><%= link_to " ", '#', class:"btn btn-default",  type: "button", id: "bold" %></li>
          <li><u><%= link_to " ", '#', class:"btn btn-default",  type: "button", id: "underline" %></u></li>
          <li><%= link_to " ", '#', class:"btn btn-default", type: "button", id: "italic" %></li>
          <li><%= link_to " ", '#', class:"btn btn-default", type: "button", id: "link" %></li>
          <li><%= link_to " ", '#', class:"btn btn-default", type: "button", id: "unlink" %></li>
          <li>
            <select id="format-select" name="styling" class="form-control btn-default">
              <option val="0">Format</option>
              <option val="1"><%= link_to "div", '#' %></option>
              <option val="2" class="headingone"><%= link_to "Heading 1", '#' %></option>
              <option val="3" class="headingtwo"><%= link_to "Heading 2", '#' %></option>
              <option val="4" class="headingthree"><%= link_to "Heading 3", '#' %></option>
              <option val="5" class="headingfour"><%= link_to "Heading 4", '#' %></option>
              <option val="6"><%= link_to "Heading 5", '#' %></option>
              <option val="7"><%= link_to "paragraph", '#' %></option>
            </select>
          </li>
          <li><%= link_to " ", '#', class:"btn btn-default", type: "button", id: "align-left"  %></li>
          <li><%= link_to " ", '#', class:"btn btn-default", type: "button", id: "align-right"  %></li>
          <li><%= link_to " ", '#', class:"btn btn-default", type: "button", id: "align-center"  %></li>
          <li><%= link_to " ", '#', class:"btn btn-default", type: "button", id: "justify"  %></li>
          <li><%= link_to " ", '#', class:"btn btn-default", type: "button", id: "pgbreak"  %></li>
          <li><%= link_to " ", '#', class:"btn btn-default", type: "button", id: "ulist"  %></li>
          <li><%= link_to " ", '#', class:"btn btn-default", type: "button", id: "olist"  %></li>
          <li><%= link_to " ", '#', class:"btn btn-default", type: "button", name:"addimage", id: "addimage"  %></li>
          <li><%= link_to " ", '#', class:"btn btn-default", type: "button", id: "addmedia"  %></li>
        </ul>
      </div>
      <!--<trix-editor input="myTextArea" name="richTextField" id="richTextField" class="trix-content" ></trix-editor> -->
      <!-- Hide(but keep) your normal text area and place in the Ifram replacement for it -->
      <iframe name="richTextField" id="richTextField" onload="this.contentDocument.designMode='on';"></iframe>

      <!-- End replacing your normal textarea -->
    <%= f.input :direction_id, as: :hidden %>
    <%= f.input :user_id, as: :hidden %>
    <% # f.button :submit %>
    <%= f.button :button, name: "myBtn", type: "button", value: "Submit Data", id:"submit-form" %>
  <% end %>
</div>
<div class="col-md-5">
  <div class="preview">
    <%= render "layouts/header"%>
    <div class="interncont">
      <h1 id="title"></h1>
      <div id="richbody"></div>
    </div>
    <%= render "layouts/footer"%>
  </div>
</div>


<%= render "image_popup"%>
